    <template id="theme_radiance_login_layout" inherit_id="website.login_layout">
      <xpath expr="//div[hasclass('oe_website_login_container')]" position="before">
        <div class="login-decorator" t-att-style="'background-image: url({})'.format(website.image_url(website, 'login_background')) if request.website.login_background else ''">
        </div>
      </xpath>
    </template>

    <template id="xtremo_mega_menu_image_text" name="Menu List With Icons">
      <section class="xtremo_mega_menu_image_text">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-3 p-2">
              <div class="d-flex">
                <span class="img"><img class="img-fluid" src="/theme_xtremo/static/src/icon/icon/cap.png" /></span>
                <h5>Menu 1</h5>
              </div>
              <nav class="nav flex-column">
                <t t-foreach="3" t-as="i">
                  <t t-set="text">Menu Item %s</t>
                  <t t-set="text" t-value="text % (i + 1)"/>
                  <a href="#" class="nav-link" data-name="Menu Item" t-esc="text"/>
