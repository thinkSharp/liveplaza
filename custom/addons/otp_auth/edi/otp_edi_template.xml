<odoo>
    <data>
        <record id="email_template_edi_otp" model="mail.template">
                <field name="name">OTP Confirmation</field>
                <field name="email_from">test@example.com</field>
                <field name="subject">OTP Confirmation</field>
                <field name="email_to">${(object.email or '')|safe}</field>
                <field name="model_id" ref="otp_auth.model_send_otp"/>
                <field name="auto_delete" eval="True"/>
                <field name="lang">en_US</field>

            <field name="body_html" type="html">
<div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
    <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
        <tbody><tr>
            <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${user.company_id.name}" />
            </td>
        </tr></tbody>
    </table>
</div>
<div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
    <p>Dear ${ctx['name']},</p>
    <p>
        We thank you for your interest in ${user.company_id.name}.
    </p>
    <p>Your OTP is: ${ctx['otp']}</p>
    <p>
        For any queries or clarifications, please call us on our toll free no. ${user.company_id.phone} or e-mail us at <a href="${user.company_id.email}" target="_blank">${user.company_id.email}</a> and we shall be glad to assist.
    </p>
    <p>Best regards,</p>
</div>
<div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
    ${user.signature | safe}
    <p style="font-size: 11px; margin-top: 10px;">
        <strong>Sent by ${user.company_id.name} using <a href="www.odoo.com" style="text-decoration:none; color: #875A7B;">Odoo</a></strong>
    </p>
</div></field>
            <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>