<?xml version="1.0" encoding="utf-8"?>
<odoo>



	<template id="customer_profile" inherit_id="website.assets_frontend" name="Customer profile Frontend">
		<xpath expr="." position="inside">
			<link rel='stylesheet' href='/bi_website_customer_profile/static/src/css/profile_css.css'/>
		</xpath>
	</template>

	<template id="my_account_profile" name="Link to Profile" inherit_id="portal.frontend_layout">
		<xpath expr="//a[@id='o_logout']" position="before">
			<a href="/my/profile" role="menuitem" class="dropdown-item">My Profile</a>
		</xpath>
	</template>

	<template id="bi_portal_my_profile" name="My Profile">
		<t t-call="website.layout">
			<div class="row" style="margin-top:10px;">
				<div class="card col-md-2" style="margin-top:0;">
					<h4>Shipping Address</h4>
					<hr/>
					<t t-foreach="sh_address" t-as="sh">
						<div class="row">
							<div class="col">
								<a t-att-href="('/shipping_address/delete/%d' %sh.id)">
									<i class='fa fa-trash-o' style="float:left;"></i>
								</a>
							</div>
							<div class="col">
								<a t-att-href="('/my/shipping_address/edit/%d' %sh.id)">
									<i class='fa fa-pencil-square-o' style="float:right;"></i>
								</a>
							</div>
						</div>
						<pre t-esc="sh._display_address()" style="font-family:arial;"/>
						<hr/>
					</t>
					<a href="/my/shipping_address/edit" class="btn btn-primary">Add Shipping Address</a>
				</div>

				<div class="card col-md-12">
					<h2 style="text-align:center; margin:0;">My Profile</h2>
					<hr/>
					<br/>
					<img alt="user_image" t-att-src="'data:image/png;base64,%s' % to_text(user_id.partner_id.image_1920)" style="max-width: 75%; max-height: 50%;
						padding-left: 138px;"/>
					<br/>
					<h3>
						<span t-field="user_id.partner_id.name"/>
					</h3>
					<p class="profile-title">
						<span t-field="user_id.partner_id.function"/>
					</p>
					<p>
						<span class="color_style">
							<i class="fa fa-building" aria-hidden="true"></i>
						</span>
						<span t-field="user_id.partner_id.company_name"/>
					</p>
					<p>
						<span t-if="user_id.partner_id.street" class="color_style">
							<i class="fa fa-map-marker" aria-hidden="true"></i>
						</span>
						<span t-if="user_id.partner_id.street" t-field="user_id.partner_id.street"/>
					</p>
					<p>
						<span t-if="user_id.partner_id.street2" t-field="user_id.partner_id.street2"/>
					</p>
					<!-- <p>
						<span t-if="user_id.partner_id.city" t-field="user_id.partner_id.city"/>
					</p> -->
					<!-- disable by KMS -->
					<!-- <p><span t-if="user_id.partner_id.zip" t-field="user_id.partner_id.zip"/></p> -->
					<p>
						<span t-if="user_id.partner_id.township_id.name" t-field="user_id.partner_id.township_id.name"/>
					</p>
					<p>
						<span t-if="user_id.partner_id.state_id.name" t-field="user_id.partner_id.state_id.name"/>
					</p>
					<p>
						<span t-if="user_id.partner_id.country_id.name" t-field="user_id.partner_id.country_id.name"/>
					</p>

					<p>
						<span t-if="user_id.partner_id.phone" class="color_style">
							<i class="fa fa-phone"></i>
						</span>
						<span t-field="user_id.partner_id.phone"/>
					</p>
					<p>
						<span t-if="user_id.partner_id.mobile" class="color_style">
							<i class="fa fa-phone"></i>
						</span>
						<span t-field="user_id.partner_id.mobile"/>
					</p>
					<p>
						<span t-if="user_id.partner_id.email" class="color_style">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
						<span t-field="user_id.partner_id.email"/>
					</p>


					<p>
						<a href="/my/profile/edit" class="btn btn-primary" style="float:left;">Edit</a>
						<a href="/web/reset_password/" class="btn btn-primary" style="float:right;">Reset Password</a>
					</p>
				</div>

				<div class="card col-md-2" style="margin-top:0;">
					<h4>Billing Address</h4>
					<hr/>
					<t t-foreach="inv_address" t-as="bl">
						<div class="row">
							<div class="col">
								<a t-att-href="('/billing_address/delete/%d' %bl.id)">
									<i class='fa fa-trash-o' style="float:left;"></i>
								</a>
							</div>
							<div class="col">
								<a t-att-href="('/my/billing_address/edit/%d' %bl.id)">
									<i class='fa fa-pencil-square-o' style="float:right;"></i>
								</a>
							</div>
						</div>
						<pre t-esc="bl._display_address()" style="font-family:arial;"/>
						<hr/>
					</t>
					<a href="/my/billing_address/edit" class="btn btn-primary">Add Billing Address</a>
				</div>
			</div>
		</t>
	</template>

	<template id="bi_portal_my_profile_edit" name="Edit My Profile">
