											<t t-foreach="country_list" t-as="country">
												<option t-att-value="country.id" t-att-selected="country.code == 'MM'">
													<t t-esc="country.name" />
												</option>
											</t>
										</select>
									</div>

									<div t-attf-class="form-group #{error and 'email' in error and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="email">Email</label>
										<input type="email" required="True" name="email" class="form-control" t-att-value="partner.email"/>
									</div>

									<div t-attf-class="form-group #{error and 'phone' in error and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="phone">Phone</label>
										<input type="text" name="phone" class="form-control" t-att-value="partner.phone"/>
									</div>

									<div t-attf-class="form-group #{error and 'mobile' in error and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="mobile">Mobile</label>
										<input type="text" required="True" name="mobile" class="form-control" t-att-value="partner.mobile"/>
									</div>
								</div>
								<div class="clearfix" />

									<div class="row">
										<a href="/my/profile" class="btn btn-default mb32">
											<span class="fa fa-long-arrow-left" />
												Return to Profile
										</a>
										<button type="submit" class="btn btn-primary a-submit pull-right mb32">Submit</button>
									</div>

								</div>
						</div>
					</form>
				</div>
			</div>
		</t>
	</template>


